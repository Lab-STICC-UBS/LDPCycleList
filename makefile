
#########################################################################
#
#	Fichier			: makefile
#
#	Utilisateur		: Titouan GENDRON
#
#########################################################################


#########################################################################
#	Compilateur
#########################################################################

C		= gcc
HOME_DIR	= .


#########################################################################
#	Options  
#########################################################################

OPTIONS	= -Wall -fopenmp ##-fast -xarch=v9

#########################################################################
#	Objets
#########################################################################

OBJETS	= LDPCycleList.o

#########################################################################
#	Librairies definition 
#########################################################################

LIB	= -lm


#########################################################################
#	Goal Definition
#########################################################################

LDPCycleList: $(OBJETS)
	@echo
	@echo "	Edition of the links ..."
	@$(C) $(INCLUDES) $(OPTIONS) -o LDPCycleList $(OBJETS) $(LIB)

#########################################################################
#	Targets
#########################################################################

LDPCycleList.o: LDPCycleList.c
	@echo "	Compilation of LDPCycleList.c"
	@$(C) $(INCLUDES) $(OPTIONS) -c LDPCycleList.c $(LIB)

clean:
	@echo "Cleaning..."
	rm -rf *.o

